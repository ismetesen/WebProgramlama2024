@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
  <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 pt-70 text-center">
                            <h2>Giriş Yapın</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->

<div class="login-container">
    <div class="login-box">
        <h2>Login</h2>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="register-link">
                Don't have an account? <a asp-controller="Account" asp-action="Register">Register here</a>
            </div>
        </form>
    </div>
</div>


<style>
    /* Container: Sayfa ortasında hizalama */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Sayfa yüksekliğini kaplar */
        background-color: #f5f5f5; /* Hafif bir arka plan rengi */
    }

    /* Login Box: Kutunun stili */
    .login-box {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

        /* Form başlık ve metin stili */
        .login-box h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333333;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .register-link {
        margin-top: 15px;
        text-align: center;
    }

    .btn-primary {
        width: 100%;
    }
</style>

