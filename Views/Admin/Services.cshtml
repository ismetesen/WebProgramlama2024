@model List<Service>
<!--? Hero Start -->
<div class="slider-area2">
    <div class="slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap hero-cap2 pt-70 text-center">
                        <h2>Hizmetler</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Hizmet Yönetimi</h2>
        <a asp-action="AddService" class="btn btn-success">
            <i class="fas fa-plus"></i> Yeni Hizmet Ekle
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="servicesTable">
                    <thead>
                        <tr>
                            <th>Hizmet Adı</th>
                
                            <th>Fiyat</th>
                            <th>Süre (dk)</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var service in Model)
                        {
                            <tr>
                                <td>@service.ServiceName</td>

                                <td>@service.Price.ToString("C2")</td>
                                <td>@service.Duration</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditService" asp-route-id="@service.ServiceID"
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm"
                                                onclick="confirmDelete(@service.ServiceID)">
                                            <i class="fas fa-trash"></i> Sil
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Silme Onay Modalı -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Hizmet Silme Onayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bu hizmeti silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="DeleteService" method="post">
                    <input type="hidden" id="serviceId" name="id" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#servicesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                }
            });
        });

        function confirmDelete(id) {
            $('#serviceId').val(id);
            $('#deleteModal').modal('show');
        }
    </script>
}