<style>
    .admin-login-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        margin-top: 100px;
        margin-bottom: 50px;
    }

    .admin-login-header {
        background-color: #1f1f1f;
        color: white;
        padding: 20px;
        border-radius: 10px 10px 0 0;
        text-align: center;
    }

    .admin-login-form {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-admin-login {
        background-color: #ff5f13;
        border-color: #ff5f13;
        color: white;
        width: 100%;
        padding: 12px;
    }

        .btn-admin-login:hover {
            background-color: #ff4800;
            border-color: #ff4800;
            color: white;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card admin-login-card">
                <div class="admin-login-header">
                    <h3 class="mb-0">Admin Girişi</h3>
                </div>
                <div class="card-body admin-login-form">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@modelError.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="Username">Kullanıcı Adı</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-0">
                            <button type="submit" class="btn btn-admin-login">Giriş Yap</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>